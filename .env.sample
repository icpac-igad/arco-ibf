# NASA Earthdata credentials
# Create an account at https://urs.earthdata.nasa.gov if you don't have one
IMERG_USERNAME=your_nasa_earthdata_username
IMERG_PASSWORD=your_nasa_earthdata_password

# Google Cloud Storage settings
GCS_BUCKET_NAME=imergv8_ea
GOOGLE_APPLICATION_CREDENTIALS=credentials/gcs-key.json
UPLOAD_TO_GCS=True

# East Africa extent coordinates
EXTENT_X1=21.85  # min longitude
EXTENT_X2=51.50  # max longitude
EXTENT_Y1=-11.72 # min latitude
EXTENT_Y2=23.14  # max latitude

# Processing options
SKIP_EXISTING=True  # Skip processing if files already exist
OUTPUT_DIR=./output  # Directory to save processed files
DOWNLOAD_DIR=./output  # Directory to save downloaded files

# Date range options (choose one approach)
# Option 1: Specify exact date range
# IMERG_START_DATE=20250410  # Format: YYYYMMDD
# IMERG_END_DATE=20250417    # Format: YYYYMMDD

# Option 2: Process last N days (default approach)
IMERG_DAYS_BACK=7  # Process data for the last 7 days

# Logging level
LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL